<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="HelloMessage" Text="Hello, World!" Margin="10" IsReadOnly="True"/>
            <Button x:ConnectionId='1' x:Name="ClickMe" Content="Click Me!"  Margin="10" HorizontalAlignment="Center"                      />

        </StackPanel>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="163" Margin="60,38,0,0" TextWrapping="Wrap" Text="This changes everything!" VerticalAlignment="Top" Width="528"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="118" Margin="248,149,0,0" VerticalAlignment="Center" Width="130" Source="Assets/Appa.png"/>

    </Grid>
</Page>

